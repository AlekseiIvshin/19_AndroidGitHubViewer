<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        style="@style/AppTheme.Toolbar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <fragment
                android:id="@id/fragmentRepositoryList"
                android:name="com.ivshinaleksei.githubviewer.ui.list.RepositoryListFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <fragment
                android:id="@id/fragmentRepositoryDetails"
                android:name="com.ivshinaleksei.githubviewer.ui.details.RepositoryDetailFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <ListView
            android:id="@id/leftNavigationDrawer"
            style="@style/AppTheme.NavDrawer" />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>


