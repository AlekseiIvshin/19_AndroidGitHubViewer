<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/defaultPadding"
    android:paddingLeft="@dimen/defaultPadding"
    android:paddingRight="@dimen/defaultPadding"
    android:paddingTop="@dimen/defaultPadding">

    <TextView
        android:id="@+id/list.item.repoFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/list.item.repoLanguage"
        android:textSize="@dimen/titleTextSize"
        android:textStyle="bold"
        tools:text="Repository/Full name" />

    <TextView
        android:id="@id/list.item.repoLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list.item.repoStarsImage"
        android:textSize="@dimen/mainTextSize"
        tools:text="Language" />

    <ImageView
        android:id="@id/list.item.repoStarsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list.item.repoStars"
        android:src="@drawable/ic_star" />

    <TextView
        android:id="@id/list.item.repoStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        tools:text="NNN" />
</RelativeLayout>