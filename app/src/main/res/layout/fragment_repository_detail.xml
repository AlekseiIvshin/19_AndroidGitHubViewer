<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ivshinaleksei.githubviewer.ui.details.RepositoryDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/defaultHorizontalMargin">

        <android.support.v7.widget.CardView
            style="@style/AppTheme.RepositoryDetails.Cards"
            android:layout_width="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/details.ownerAvatar"
                    style="@style/AppTheme.RepositoryDetails.Owner.Avatar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    tools:src="@drawable/github_mark" />

                <TextView
                    android:id="@+id/details.ownerLogin"
                    style="@style/AppTheme.RepositoryDetails.Owner.Login"
                    android:layout_toRightOf="@id/details.ownerAvatar"
                    tools:text="OwnerLogin" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/AppTheme.RepositoryDetails.Cards">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/details.repoFullName"
                    style="@style/AppTheme.RepositoryDetails.RepoName"
                    android:layout_alignParentLeft="true"
                    tools:text="Repository/Full name" />

                <TextView
                    android:id="@+id/details.createdDate"
                    style="@style/AppTheme.RepositoryDetails.CreatedDate"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/details.repoFullName"
                    tools:text="dd/MM/yyyy" />

                <TextView
                    android:id="@+id/details.repoLanguage"
                    style="@style/AppTheme.RepositoryDetails.RepoLanguage"
                    android:layout_below="@id/details.repoFullName"
                    android:layout_toLeftOf="@+id/details.repoStarsImage"
                    tools:text="Language" />

                <ImageView
                    android:id="@id/details.repoStarsImage"
                    style="@style/AppTheme.RepositoryDetails.StarsImage"
                    android:layout_below="@id/details.repoFullName"
                    android:layout_toLeftOf="@+id/details.repoStars" />

                <TextView
                    android:id="@id/details.repoStars"
                    style="@style/AppTheme.RepositoryDetails.Stars"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/details.repoFullName"
                    tools:text="NNN" />

                <TextView
                    android:id="@+id/details.repoDescription"
                    style="@style/AppTheme.RepositoryDetails.Description"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/details.createdDate"
                    tools:text="Redis is an in-memory database that persists on disk. The data model is key-value, but many different kind of values are supported: Strings, Lists, Sets, Sorted Sets, Hashes, HyperLogLogs, Bitmaps." />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>
