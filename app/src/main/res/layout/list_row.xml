<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.RepositoryList.Item">

    <TextView
        android:id="@id/repoFullName"
        style="@style/AppTheme.RepositoryList.Item.RepoName"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/repoLanguage"
        tools:text="Repository/Full name"/>
    <TextView
        android:id="@id/repoLanguage"
        style="@style/AppTheme.RepositoryList.Item.RepoLanguage"
        android:layout_toLeftOf="@id/repoStarsImage"
        tools:text="Language"/>
    <TextView
        android:id="@id/repoDescription"
        style="@style/AppTheme.RepositoryList.Item.Description"
        android:layout_below="@id/repoFullName"
        android:layout_alignParentLeft="true"
        tools:text="Repository Description DDDDDDDDDDDDDDDD DDDDDEEEEEEEEESCIFOAS FGNAO GSNA"/>

    <ImageView
        android:id="@id/repoStarsImage"
        style="@style/AppTheme.RepositoryList.Item.StarsImage"
        android:layout_toLeftOf="@id/repoStars"/>
    <TextView
        android:id="@id/repoStars"
        style="@style/AppTheme.RepositoryList.Item.Stars"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        tools:text="NNN"/>
</RelativeLayout>