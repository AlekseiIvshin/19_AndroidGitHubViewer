<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.RepositoryList.Item" parent="Theme.AppCompat">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/defaultHorizontalMargin</item>
        <item name="android:background">@drawable/repository_list_item</item>
    </style>

    <style name="AppTheme.RepositoryList.Item.RepoName" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>


    <style name="AppTheme.RepositoryList.Item.Stars" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.RepositoryList.Item.StarsImage" parent="Theme.AppCompat">
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.RepositoryList.Item.RepoLanguage" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>


    <style name="AppTheme.RepositoryList.Item.Description" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>
</resources>